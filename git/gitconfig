[core]
  pager = less -SMR
  editor = vim
  excludesfile = ~/.gitignore_global
[alias]
  lg = log --color --oneline
  lgg = log --color --oneline --graph
  logsig = log --show-signature -1
  fixup = commit --fixup
  amend = commit --amend
  stat = status
  fp = push --force-with-lease
  check = checkout
  staged = diff --staged
  intent = add --intent-to-add .
  patch = git add -p .
[diff]
  tool = vim
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[commit]
  verbose = true
  gpgsign = true
[rebase]
  autosquash = true
