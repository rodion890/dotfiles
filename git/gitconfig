[user]
	email = meyric@dxw.com
	name = Meyric Rawlings
	signkey = 0x4A0DE55F078423CC
[core]
	pager = less -SMR
	editor = subl -n -w
	excludesfile = ~/.gitignore_global
[alias]
	lg = log --color --pretty=oneline --abbrev-commit
	logsig = log --show-signature -1
	fixup = commit --fixup
	amend = commit --amend
	stat = status
	fp = push --force-with-lease
	check = checkout
  staged = diff --staged
	intent = add --intent-to-add .
[diff]
	tool = subl -w
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
	verbose = true
	gpgsign = true
[includeIf "gitdir:~/srclab/"]
  path = ~/srclab/.gitconfig
[rebase]
	autosquash = true
