fpath+=$HOME/src/pure

# add all the local bits
source ~/src/dotfiles/zsh/options.zsh
source ~/src/dotfiles/zsh/exports.zsh
source ~/src/dotfiles/zsh/completion.zsh
source ~/src/dotfiles/zsh/aliases.zsh
